<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FloatingHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryLight</item>

    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>

    </style>

    <style name="pictureAirly">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="cardTitle">
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>

    </style>

    <style name="more_menu_volume">
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>

    <style name="button">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:background">@drawable/roundcorner</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>



</resources>